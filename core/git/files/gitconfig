[color]
    # The master switch for color
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    # Prevents non-ASCII filenames from looking like "\303\244.txt"
    quotepath = false

[init]
    defaultBranch = master

[pull]
    # Prevents accidental "branch spaghetti" on pulls
    rebase = false
