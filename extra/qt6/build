#!/bin/sh -e

patch -Np1 -i qt-everywhere-src-6.9.1-upstream_fixes-1.patch

./configure -prefix /opt/qt6        \
            -sysconfdir /etc/xdg    \
            -dbus-linked            \
            -openssl-linked         \
            -system-sqlite          \
            -nomake examples        \
            -no-rpath               \
            -journald               \
            -skip qt3d              \
            -skip qtquick3dphysics  \
            -skip qtwebengine

ninja
DESTDIR=$1 ninja install

# Remove references to build dir
find $1/opt/qt6 -name \*.prl \
   -exec sed -i -e '/^QMAKE_PRL_BUILD_DIR/d' {} \;

