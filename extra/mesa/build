#!/bin/sh -e

meson \
    --prefix=/usr \
    --sysconfdir=/etc \
    --mandir=/usr/share/man \
    --localstatedir=/var \
    --buildtype=release \
    -Dplatforms=x11,wayland \
    -Degl=enabled \
    -Dvalgrind=disabled \
    -Dlibunwind=disabled \
    -Dglvnd=true \
    -Dvulkan-drivers="auto" \
    -Dgallium-drivers="auto" \
    -D gles1=disabled        \
    -Dvideo-codecs=all     \
    . output

ninja -C output
DESTDIR=$1 ninja -C output install
