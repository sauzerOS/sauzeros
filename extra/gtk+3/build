#!/bin/sh -e

for p in *.patch; do
    patch -p1 < "$p"
done

# Don't enable native language support and don't compile schemas.
sed -e '/compile_schemas/s/true/false/' \
    -e '/ENABLE_NLS/s/1/0/' \
    -e "/subdir('po/d" \
    meson.build > _
mv -f _ meson.build

meson setup \
    -Dprefix=/usr \
    -Dx11_backend=true \
    -Dwayland_backend=false \
    -Dprint_backends=file,lpr \
    -Dcolord=no \
    -Dintrospection=false \
    -Ddemos=false \
    -Dexamples=false \
    -Dtests=false \
    output

ninja -C output
meson install -C output
