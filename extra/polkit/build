#!/bin/sh

mkdir build
cd    build

meson --prefix=/usr                       \
      --buildtype=release                 \
      -Dos_type=lfs                       \
      -Dman=false                         \
      -Dsession_tracking=logind           \
      -Dtests=false
      ..

ninja
DESTDIR=$1 ninja install

install -d $1/etc/pam.d/
install -Dm644 ../polkit-1 $1/etc/pam.d/polkit-1
