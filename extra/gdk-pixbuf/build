#!/bin/sh -e

meson setup build         \
      --prefix=/usr       \
      --buildtype=release \
      -D others=enabled   \
      -D man=false        \
      -D installed_tests=false \
      -D builtin_loaders=all \
      -D glycin=disabled  \
      -D jpeg=enabled     \
      -D gif=enabled      \
      -D introspection=enabled \
      -D png=enabled      \
      -D thumbnailer=enabled \
      -D tiff=enabled

meson compile -C build
DESTDIR=$1 meson install -C build
