#!/bin/sh -e

sed -i 's/AV_OPT_TYPE_CHANNEL_LAYOUT/AV_OPT_TYPE_CHLAYOUT/' filters/f_lavfi.c

mkdir build
cd    build

meson setup --prefix=/usr       \
            --buildtype=release \
            -D x11=enabled      \
            -D drm=enabled      \
            ..
ninja
DESTDIR=$1 ninja install
