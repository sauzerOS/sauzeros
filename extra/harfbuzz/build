#!/bin/sh -e

meson setup build         \
      --prefix=/usr       \
      --buildtype=release

meson compile -C build
meson install -C build --destdir=$1

#32bit

rm -rf build
meson setup build           \
      --cross-file=lib32    \
      --prefix=/usr         \
      --libdir=/usr/lib32   \
      --buildtype=release   \
      -D graphite2=disabled \
      -D tests=disabled

meson compile -C build
meson install -C build --destdir=$PWD/DESTDIR
install -d $1/usr/lib32
cp -vr DESTDIR/usr/lib32/* $1/usr/lib32
